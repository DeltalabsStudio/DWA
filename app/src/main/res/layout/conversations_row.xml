<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <id.delta.whatsapp.ui.views.Card
        android:id="@+id/mCard"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="62.0dp">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <com.whatsapp.ThumbnailButton
                android:id="@+id/mAvatar"
                android:src="@drawable/delta_ic_profile"
                android:layout_width="46.0dp"
                android:layout_height="46.0dp" />

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0.0dp"
                android:layout_height="fill_parent">

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/mTitle"
                    android:text="@string/deltalabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mSubtitle"
                    android:text="@string/starred_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>



    </id.delta.whatsapp.ui.views.Card>


</RelativeLayout>