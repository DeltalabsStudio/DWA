<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/delta_dialog_bg"
    android:padding="16dp"
    android:id="@+id/mHolder"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Create"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:visibility="invisible"
        android:layout_margin="8dp"
        android:background="?android:listDivider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:foreground="?selectableItemBackgroundBorderless"
            android:id="@+id/mCustom"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content">

            <id.delta.whatsapp.ui.accent.AccentImageView
                android:src="@drawable/delta_ic_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.whatsapp.WaTextView
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="1.0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="35.0dp"
            android:background="?android:listDivider"/>


        <LinearLayout
            android:foreground="?selectableItemBackgroundBorderless"
            android:id="@+id/mGroup"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content">

            <id.delta.whatsapp.ui.accent.AccentImageView
                android:src="@drawable/delta_ic_addgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.whatsapp.WaTextView
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Add Group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="1.0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="35.0dp"
            android:background="?android:listDivider"/>

        <LinearLayout
            android:paddingTop="10dp"
            android:foreground="?selectableItemBackgroundBorderless"
            android:id="@+id/mBroadcast"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content">

            <id.delta.whatsapp.ui.accent.AccentImageView
                android:src="@drawable/delta_ic_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.whatsapp.WaTextView
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Broadcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>