<resources>
    <style name="BottomDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="homeSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">-1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="Theme.App.Dark" parent="Theme.AppCompat">
        <!-- Copy from Theme.App Stock -->
        <item name="android:windowContentOverlay">@null</item>
      <!--  <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
        <item name="android:fastScrollTrackDrawable">@drawable/fastscroll_track</item>
        <item name="actionBarSize">@dimen/actionbar_height</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="actionModeBackground">@color/action_mode</item>
        <item name="panelMenuListTheme">@style/PanelMenuList</item>
        <item name="toolbarStyle">@style/Widget.Styled.Toolbar</item>-->
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.App.Home.Dark" parent="@style/Theme.App.Dark">
        <!-- <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_home</item>
        <item name="android:fastScrollTrackDrawable">@drawable/fastscroll_track</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.CondensedActionBar.Dark" parent="@style/Theme.App.Dark">
       <!-- <item name="actionBarStyle">@style/Widget.Styled.ActionBar.Condensed</item>
        <item name="actionButtonStyle">@style/ActionBarCondensedButtonStyle</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Trans" parent="Theme.App.Dark">
        <item name="android:windowBackground">@color/delta_black50</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="Theme.App.Home.Trans" parent="Theme.App.Home.Dark">
        <item name="android:windowBackground">@color/delta_black50</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="Theme.App.CondensedActionBar.Trans" parent="@style/Theme.App.CondensedActionBar.Dark">
        <item name="android:windowBackground">@color/delta_black50</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>
</resources>
