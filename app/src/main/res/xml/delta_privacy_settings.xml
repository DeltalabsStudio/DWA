<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:layout="@layout/delta_preference_category"
        android:title="General"/>

    <CheckBoxPreference
        android:layout="@layout/delta_preference_layout"
        android:widgetLayout="@layout/delta_preference_widget_switch"
        android:title="@string/pref_enable_antirevoke"
        android:key="Antirevoke"
        android:summary="@string/sum_antirevoke"
        android:defaultValue="false" />

    <CheckBoxPreference android:summary="@string/pref_sum_statusindicator" android:defaultValue="false" android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"
        android:title="@string/pref_enable_statusindicator"
        android:key="hide_status"/>

    <CheckBoxPreference android:summaryOff="Disable" android:summaryOn="Enable" android:defaultValue="false" android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"
        android:title="@string/pref_enable_dsbforward"
        android:key="DisabledFwd"/>

    <CheckBoxPreference android:summaryOff="Disable" android:summaryOn="Enable" android:defaultValue="false" android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"
        android:title="@string/pref_enable_alwaysonline"
        android:key="always_online"/>

    <CheckBoxPreference android:summary="@string/sum_hideseen" android:defaultValue="false" android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"
        android:title="@string/pref_enable_hideseen"
        android:key="HideSeen"/>

    <CheckBoxPreference android:summary="@string/sum_blueonreply" android:defaultValue="false" android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"
        android:title="@string/pref_enable_blueonreply"
        android:key="BlueOnReply"/>

    <PreferenceCategory
        android:layout="@layout/delta_preference_category"
        android:title="Contact"/>

    <CheckBoxPreference android:title="@string/pref_hideread" android:key="C_HideRead" android:summary="@string/sum_hideread_contact" android:defaultValue="false" android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"/>
    <CheckBoxPreference android:title="@string/pref_hidereceipt" android:key="C_HideReceipt" android:summary="@string/sum_hidereceipt_contact" android:defaultValue="false" android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"/>
    <CheckBoxPreference android:title="@string/pref_hide_play" android:key="C_HidePlay" android:summary="@string/sum_hideplay_contact" android:defaultValue="false" android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"/>
    <CheckBoxPreference android:title="@string/pref_hiderecord" android:key="C_HideRecord" android:summary="@string/sum_hiderecord" android:defaultValue="false" android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"/>
    <CheckBoxPreference android:title="@string/pref_hide_compose" android:key="C_HideCompose" android:summary="@string/sum_hide_compose" android:defaultValue="false" android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"/>

    <PreferenceCategory
        android:layout="@layout/delta_preference_category"
        android:title="Group"/>

    <CheckBoxPreference android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch" android:title="@string/pref_hideread" android:key="G_HideRead" android:summary="@string/sum_hideread_group" android:defaultValue="false" />
    <CheckBoxPreference android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"  android:title="@string/pref_hidereceipt" android:key="G_HideReceipt" android:summary="@string/sum_hidereceipt_group" android:defaultValue="false" />
    <CheckBoxPreference android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"  android:title="@string/pref_hide_play" android:key="G_HidePlay" android:summary="@string/sum_hideplay_group" android:defaultValue="false" />
    <CheckBoxPreference android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"  android:title="@string/pref_hiderecord" android:key="G_HideRecord" android:summary="@string/sum_hiderecord" android:defaultValue="false" />
    <CheckBoxPreference android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"  android:title="@string/pref_hide_compose" android:key="G_HideCompose" android:summary="@string/sum_hide_compose" android:defaultValue="false" />

    <PreferenceCategory
        android:layout="@layout/delta_preference_category"
        android:title="Broadcast"/>

    <CheckBoxPreference android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"  android:title="@string/pref_hideread" android:key="B_HideRead" android:summary="@string/sum_hideread_broadcast" android:defaultValue="false" />
    <CheckBoxPreference android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"  android:title="@string/pref_hidereceipt" android:key="B_HideReceipt" android:summary="@string/sum_hidereceipt_broadcast" android:defaultValue="false" />
    <CheckBoxPreference android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"  android:title="@string/pref_hide_play" android:key="B_HidePlay" android:summary="@string/sum_hideplay_broadcast" android:defaultValue="false" />
    <CheckBoxPreference android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"  android:title="@string/pref_hiderecord" android:key="B_HideRecord" android:summary="@string/sum_hiderecord" android:defaultValue="false" />
    <CheckBoxPreference android:layout="@layout/delta_preference_layout" android:widgetLayout="@layout/delta_preference_widget_switch"  android:title="@string/pref_hide_compose" android:key="B_HideCompose" android:summary="@string/sum_hide_compose" android:defaultValue="false" />


</PreferenceScreen>