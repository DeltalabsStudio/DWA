<resources>

    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.App.Home" parent="@style/Theme.App">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.CondensedActionBar" parent="@style/Theme.App">
      <!--  <item name="actionBarStyle">@style/Widget.Styled.ActionBar.Condensed</item>
        <item name="actionButtonStyle">@style/ActionBarCondensedButtonStyle</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ListItemSubtitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">15.0sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListItemTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">17.0sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ActionBarButtonStyle" parent="@style/Widget.AppCompat.ActionButton" />

    <style name="RegistrationButton">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/btn_green_registration</item>
        <item name="android:paddingLeft">24.0dip</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">24.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
